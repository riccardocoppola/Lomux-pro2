<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewAddVenue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/lonText"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#30FFFFFF"
            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            app:layout_constraintBottom_toBottomOf="@+id/addVenuePinButton"
            app:layout_constraintEnd_toStartOf="@+id/addVenuePinButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/latText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="31dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:text="Lon"
            android:textColor="@color/tw__solid_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lonText" />

        <EditText
            android:id="@+id/infoVenue"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#30FFFFFF"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Inserisci info"
            android:inputType="textMultiLine"
            android:maxLines="3"

            android:minLines="2"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitleVenue" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Indirizzo"
            android:textAlignment="textStart"
            android:textColor="@color/tw__solid_white"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoVenue" />

        <EditText
            android:id="@+id/subtitleVenue"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#30FFFFFF"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Inserisci sottotitolo"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:minLines="1"
            android:padding="10dp"
            android:scrollbars="vertical"

            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            app:layout_constraintBottom_toTopOf="@+id/infoVenue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameVenue" />

        <EditText
            android:id="@+id/nameVenue"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="#30FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:hint="Inserisci nome"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:minLines="1"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            app:layout_constraintBottom_toTopOf="@+id/subtitleVenue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="casual"
            android:text="VenuePin"
            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/nameVenue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="#30FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/searchAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="31dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:text="Lat"
            android:textColor="@color/tw__solid_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/latText" />

        <android.support.v7.widget.SearchView
            android:id="@+id/searchAddress"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="#30FFFFFF"
            app:iconifiedByDefault="false"
            app:layout_constraintBottom_toTopOf="@+id/addVenuePinButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:queryHint="cerca indirizzo" />

        <TextView
            android:id="@+id/latText"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="#30FFFFFF"
            android:textColor="@color/tw__solid_white"
            android:textColorHint="@color/tw__solid_white"
            app:layout_constraintBottom_toTopOf="@+id/lonText"
            app:layout_constraintEnd_toStartOf="@+id/addVenuePinButton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/searchAddress"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addVenuePinButton"
            android:layout_width="97dp"
            android:layout_height="90dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/fui_done_check_mark" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>